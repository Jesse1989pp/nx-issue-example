{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "cypress",
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ],
    "composite": true
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "cypress/**/*.cy.ts",
    "cypress/**/*.test.ts",
    "cypress/**/*.spec.ts",
    "cypress/**/*.test.tsx",
    "cypress/**/*.spec.tsx",
    "cypress/**/*.test.js",
    "cypress/**/*.spec.js",
    "cypress/**/*.test.jsx",
    "cypress/**/*.spec.jsx",
    "cypress/**/*.d.ts"
  ]
}
